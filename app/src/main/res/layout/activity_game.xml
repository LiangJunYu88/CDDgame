<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_bg"
        tools:context=".GameActivity">

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="52dp" app:srcCompat="@drawable/btn_chupai" android:id="@+id/imageButton"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.614"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="52dp" app:srcCompat="@drawable/btn_pass" android:id="@+id/imageButton2"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.617"/>
</android.support.constraint.ConstraintLayout>