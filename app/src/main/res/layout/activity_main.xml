<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/menu_bg"

                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="0dp" app:srcCompat="@drawable/menu1" android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="0dp" app:srcCompat="@drawable/menu4" android:id="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="@+id/imageButton2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="209dp"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu2" android:id="@+id/imageButton5"
            app:layout_constraintStart_toStartOf="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu3" android:id="@+id/imageButton6"
            app:layout_constraintStart_toStartOf="@+id/imageButton7"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5"
    />
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu5" android:id="@+id/imageButton7"
            app:layout_constraintTop_toBottomOf="@+id/imageButton6"
            app:layout_constraintEnd_toEndOf="@+id/imageButton5"/>
    view.bringToFront()
</android.support.constraint.ConstraintLayout>