<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/menu_bg"

                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu1" android:id="@+id/PlayButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginTop="32dp"
            app:layout_constraintVertical_bias="0.100000024" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:onClick="startGame"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu4" android:id="@+id/SettingButton"
            app:layout_constraintTop_toBottomOf="@+id/PlayButton"
            app:layout_constraintStart_toStartOf="@+id/PlayButton"
            android:layout_marginTop="4dp"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu2" android:id="@+id/HelpButton"
            app:layout_constraintStart_toStartOf="@+id/SettingButton"
            app:layout_constraintTop_toBottomOf="@+id/SettingButton" android:layout_marginTop="4dp"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu3" android:id="@+id/AboutButton"
            app:layout_constraintStart_toStartOf="@+id/ExitButton"
            app:layout_constraintTop_toBottomOf="@+id/HelpButton"
            android:layout_marginTop="4dp"/>
    <ImageButton
            android:layout_width="131dp"
            android:layout_height="45dp" app:srcCompat="@drawable/menu5" android:id="@+id/ExitButton"
            app:layout_constraintEnd_toEndOf="@+id/HelpButton"
            app:layout_constraintTop_toBottomOf="@+id/AboutButton" android:layout_marginTop="4dp"
            android:onClick="exitGame"/>
</android.support.constraint.ConstraintLayout>